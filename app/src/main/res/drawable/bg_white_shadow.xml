<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="1dp" android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#1fd1d1d1" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:right="2dp" android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#8Ad1d1d1" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:right="3dp" android:bottom="3dp">
        <shape
            android:shape="rectangle">
                <solid android:color="#ffd1d1d1" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="4dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>